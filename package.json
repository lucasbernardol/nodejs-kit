{
  "name": "nodejs-starter-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/lucasbernardol/nodejs-starter-api.git",
  "author": "lucasbernardol <lucasbernardo.touch@gmail.com>",
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "swc . -d ./dist --ignore node_modules --copy-files --config module.type=commonjs --config module.noInterop=false --config module.lazy=true",
    "dev": "nodemon --config ./nodemon-sucrase.json src/index.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.29",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "sucrase": "^3.35.0"
  },
  "dependencies": {
    "module-alias": "^2.2.3"
  },
  "_moduleAliases": {
    "@controllers": "src/controllers"
  }
}
